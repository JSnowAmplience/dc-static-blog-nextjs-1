{
  "name": "dc-static-site-nextjs",
  "version": "1.0.0",
  "description": "DC Static Site with NextJS",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "precommit": "npm run lint",
    "commit": "npx git-cz",
    "lint": "prettier \"**/*.ts\" \"**/*.json\" \"**/*.tsx\" --write --ignore-path .gitignore"
  },
  "repository": {
    "type": "git",
    "url": "git+https://c-bibby@github.com/amplience/dc-static-site-nextjs.git"
  },
  "author": "Amplience",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/amplience/dc-static-site-nextjs/issues"
  },
  "homepage": "https://github.com/amplience/dc-static-site-nextjs#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        100
      ],
      "type-case": [
        1,
        "always",
        "lower-case"
      ],
      "subject-case": [
        1,
        "always",
        "lower-case"
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@types/node": "^12.6.8",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.5",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.1",
    "prettier": "^1.18.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "next": "^9.0.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  }
}
